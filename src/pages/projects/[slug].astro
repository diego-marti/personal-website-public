---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import PdfViewer from "../../components/PdfViewer.astro";

export async function getStaticPaths() {
    const projects = await getCollection("projects");
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

interface Props {
    project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
const { Content } = await project.render();

const components = { PdfViewer };
---

<Layout title={`${project.data.title} - Diego Martí`} showNavBar={false}>
    <article class="project">
        <div class="project-header">
            <a href="/" class="back-link">← Back</a>
            <h1>{project.data.title}</h1>
            <div class="project-meta">
                <div class="project-authors">
                    {
                        project.data.authors ? (
                            project.data.authors.map((author, index, arr) => (
                                <span
                                    class={
                                        author.includes("Diego")
                                            ? "author-bold"
                                            : "author"
                                    }
                                >
                                    {author}{index < arr.length - 1 ? ", " : ""}
                                </span>
                            ))
                        ) : (
                            <span class="author-bold">Diego Martí Monsó</span>
                        )
                    }
                </div>
                <div class="project-year">{project.data.year}</div>
            </div>

            <div class="project-links">
                {
                    project.data.code && (
                        <a
                            href={project.data.code}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            View Code
                        </a>
                    )
                }
            </div>
        </div>

        <div class="project-content">
            <Content components={components} />
        </div>
    </article>
</Layout>

<style>
    .project {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2rem 0;
    }

    .project-header {
        margin-bottom: 2rem;
    }

    .back-link {
        display: inline-block;
        color: var(--color-text-light);
        text-decoration: none;
        margin-bottom: 1rem;
        transition: color 0.2s ease;
    }

    .back-link:hover {
        color: var(--color-text);
        text-decoration: underline;
    }

    .project h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        line-height: 1.3;
        color: var(--color-text);
    }

    .project-meta {
    }

    .project-authors {
        font-size: 0.9rem;
        color: var(--color-text-light);
    }

    .author-bold {
        font-weight: bold;
    }

    .project-year {
        font-size: 0.9rem;
        color: var(--color-text-light);
    }

    .project-links {
        display: flex;
        gap: 1rem;
    }

    .project-links a {
        color: var(--color-text-light);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s ease;
    }

    .project-links a:hover {
        color: var(--color-text);
        text-decoration: underline;
    }

    .project-content {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--color-text);
    }

    .project-content :global(a) {
        color: var(--color-text);
        text-decoration: underline;
        transition: color 0.2s ease;
    }

    .project-content :global(a:hover) {
        color: var(--color-text-light);
    }

    .project-content :global(h2) {
        font-size: 1.8rem;
        margin: 2rem 0 1rem;
        color: var(--color-text);
    }

    .project-content :global(h3) {
        font-size: 1.4rem;
        margin: 1.5rem 0 1rem;
        color: var(--color-text);
    }

    .project-content :global(p) {
        margin-bottom: 1rem;
    }

    .project-content :global(pre) {
        background: #f5f5f5;
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        margin: 1rem 0;
    }

    .project-content :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: 4px;
        margin: 1rem 0;
    }

    .project-content :global(ul),
    .project-content :global(ol) {
        margin: 1rem 0;
        padding-left: 1.5rem;
    }

    .project-content :global(li) {
        margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
        .project {
            padding: 1rem;
        }

        .project h1 {
            font-size: 2rem;
        }
    }
</style>
