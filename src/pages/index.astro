---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { siteConfig } from "../config/site";

// Get all content from collections
const publications = await getCollection("publications");
const blogPosts = await getCollection("blog");
const projects = await getCollection("projects");

// Helper function to sort by year and month (newest first)
const sortByDate = (a: any, b: any) => {
    // If we have pubDate (blog posts), use that
    if (a.data.pubDate && b.data.pubDate) {
        return b.data.pubDate.getTime() - a.data.pubDate.getTime();
    }
    
    // Otherwise sort by year and month
    if (a.data.year !== b.data.year) {
        return b.data.year - a.data.year;
    }
    return (b.data.month || 0) - (a.data.month || 0);
};

// Sort all collections by date
const sortedPublications = publications.sort(sortByDate);
const sortedBlogPosts = blogPosts.sort(sortByDate);
const sortedProjects = projects.sort(sortByDate);
---

