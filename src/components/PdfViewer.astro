---
interface Props {
    src: string;
    title: string;
}

const { src, title } = Astro.props;
---

<section class="pdf-section">
    <iframe
        src={src}
        title={title}
        style="width:100%;height:80vh;border:0;"
    />
</section>

<style>
    .pdf-section {
        margin-top: 2rem;
        border-top: 1px solid var(--color-border);
        padding-top: 2rem;
    }
</style>